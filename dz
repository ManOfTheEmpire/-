import sys
from PyQt6.QtWidgets import QApplication, QWidget, QVBoxLayout, QLabel, QLineEdit, QPushButton

class MainWindow(QWidget):
    def __init__(self):
        super().__init__()
        
        self.setWindowTitle("Решение задачи")
        
        layout = QVBoxLayout()
        
        self.label1 = QLabel("Введите значение a:")
        self.input1 = QLineEdit()
        
        self.label2 = QLabel("Введите значение b:")
        self.input2 = QLineEdit()
        
        self.result_label = QLabel("Результат:")
        self.result_value = QLabel("")
        
        self.calculate_button = QPushButton("Решить задачу")
        self.calculate_button.clicked.connect(self.calculate)
        
        layout.addWidget(self.label1)
        layout.addWidget(self.input1)
        layout.addWidget(self.label2)
        layout.addWidget(self.input2)
        layout.addWidget(self.result_label)
        layout.addWidget(self.result_value)
        layout.addWidget(self.calculate_button)
        
        self.setLayout(layout)
        
    def calculate(self):
        a = float(self.input1.text())
        b = float(self.input2.text())
        result = (a + b) / 2
        
        self.result_value.setText(str(result))

if __name__ == "__main__":
    app = QApplication(sys.argv)
    window = MainWindow()
    window.show()
    sys.exit(app.exec())
